@model CustomerManagement.Models.Appointment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppointmentId" />
            <div class="form-group">
                <label asp-for="AppointmentDate" class="control-label"></label>
                <input asp-for="AppointmentDate" class="form-control" type="date"/>
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentHour" class="control-label"></label>
                <input asp-for="AppointmentHour" class="form-control" type="time"/>
                <span asp-validation-for="AppointmentHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Customer</label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
                <a asp-controller="Customer" asp-action="Create" class="btn btn-link">Create New Customer</a>
                <a asp-controller="Customer" asp-action="DetailsAppointment" asp-route-appointmentId="@Model.AppointmentId">View Customer</a>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label">Service</label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
                <a asp-controller="Service" asp-action="Create" class="btn btn-link">Create New Service</a>
                <a asp-controller="Service" asp-action="Details" asp-route-appointmentId="@Model.AppointmentId">View Service</a>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Employee</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                <a asp-controller="Employee" asp-action="Create" class="btn btn-link">Create New Employee</a>
                <a asp-controller="Employee" asp-action="Details" asp-route-appointmentId="@Model.AppointmentId">View Employee</a>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentStatusId" class="control-label">Appointment Status</label>
                <select asp-for="AppointmentStatusId" class="form-control" asp-items="ViewBag.AppointmentStatusId"></select>
                <span asp-validation-for="AppointmentStatusId" class="text-danger"></span>
                <a asp-controller="AppointmentStatus" asp-action="Create" class="btn btn-link">Create New Appointment Status</a>
                <a asp-controller="AppointmentStatus" asp-action="Details" asp-route-appointmentId="@Model.AppointmentId">View Appointment Status</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
