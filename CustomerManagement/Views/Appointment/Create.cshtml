@model CustomerManagement.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppointmentDate" class="control-label">Appointment Date</label>
                <input asp-for="AppointmentDate" class="form-control" type="date"/>
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentHour" class="control-label">Appointment Hour</label>
                <input asp-for="AppointmentHour" class="form-control" type="time"/>
                <span asp-validation-for="AppointmentHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CustomerId">Customer</label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.Customers"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
                <a asp-controller="Customer" asp-action="Create" class="btn btn-link">Create New Customer</a>
            </div>
            <div class="form-group">
                <label for="ServiceId">Service</label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.Services"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
                <a asp-controller="Service" asp-action="Create" class="btn btn-link">Create New Service</a>
            </div>
            <div class="form-group">
                <label for="EmployeeId">Employee</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                <a asp-controller="Employee" asp-action="Create" class="btn btn-link">Create New Employee</a>
            </div>
            <div class="form-group">
                <label for="AppointmentStatusId">Appointment Status</label>
                <select asp-for="AppointmentStatusId" class="form-control" asp-items="ViewBag.AppointmentStatus"></select>
                <span asp-validation-for="AppointmentStatusId" class="text-danger"></span>
                <a asp-controller="AppointmentStatus" asp-action="Create" class="btn btn-link">Create New Appointment Status</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
